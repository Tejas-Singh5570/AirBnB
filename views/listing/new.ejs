<% layout("/layouts/boilerplate") %>


    <body>
        <div class="row">
            <div class="col-8">
                
                <form method="POST"  action="/listing" novalidate class = "needs-validation">

                    <div>
                        <label for="title" class="form-lable" >Title</label>
                        <input type="text" class="form-control"  name="listing[title]" ,
                            placeholder="Add a catchy title" required><br>
                    </div>

                    <div>
                        <label for="description" class="form-lable">Discription</label>
                        <textarea class="form-control"  name="listing[description]" placeholder="Facilities..."
                            id="" required></textarea><br>
                    </div>

                    <div>
                        <label for="image" class="form-lable">Image url</label>
                        <input class="form-control"  name="listing[image]" , placeholder="Image link" ><br>
                    </div>
                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="number" class="form-lable">Price</label>
                            <input class="form-control" type="number" name="listing[price]" , placeholder="Should't less than 100" required><br>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Location</label>
                            <input class="form-control" type="text" name="listing[location]" ,
                                placeholder="Bhubaneswar, odisha" required><br>
                        </div>

                    </div>
                    <div>
                        <label for="country" class="form-lable">Country</label>
                        <input class="form-control"  type="text" name="listing[country]" , placeholder="India" required><br><br>
                    </div>

                    <button  class=" btn cos-btn">Add</button>
                </form>
            </div>
        </div>
    </body>